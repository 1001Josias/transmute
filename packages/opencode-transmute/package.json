  },
  "keywords": [
    "opencode",
    "plugin",
    "git",
    "worktree",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@opencode-ai/plugin": "^1.0.0",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "unbuild": "^3.6.1",
    "vitest": "^1.0.0"
  }
}
