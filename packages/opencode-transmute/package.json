{
  "name": "opencode-transmute",
  "version": "0.1.0",
  "description": "OpenCode plugin for task-based development with git worktrees",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
